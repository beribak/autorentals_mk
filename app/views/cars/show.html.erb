<% content_for :title, "#{@car.full_name} - #{t('app.brand')}" %>

<section class="car-show-header">
  <div class="container">
    <div class="back-nav">
      <%= link_to cars_path, class: "back-link" do %>
  <span class="back-icon">‚Üê</span>
  <%= t('cars.show.back') %>
      <% end %>
    </div>
    
    <div class="car-show-container">
      <!-- Car Image Section -->
      <div class="car-image-section">
        <img src="<%= @car.image_url %>" alt="Rent a car Skopje - <%= @car.full_name %>" class="car-main-image">
        <div class="car-image-overlay">
          <div class="status-badge"><%= t('cars.show.available') %></div>
          <div class="year-badge"><%= @car.year %></div>
        </div>
      </div>
      
      <!-- Car Information Section -->
      <div class="car-info-section">
        <div class="car-brand-show"><%= @car.brand %></div>
        <h1 class="car-title-show"><%= @car.model %></h1>
        
        <!-- Price Section -->
        <div class="car-price-section">
          <div class="price-display">‚Ç¨<%= @car.price_per_day %></div>
          <div class="price-unit"><%= t('cars.show.per_day') %></div>
        </div>
        
        <!-- Specifications -->
        <div class="car-specs-section">
          <h3 class="specs-title"><%= t('cars.show.specs') %></h3>
          <div class="specs-grid">
            <div class="spec-item">
              <span class="spec-icon">üìÖ</span>
              <div class="spec-info">
                <div class="spec-label"><%= t('cars.show.year') %></div>
                <div class="spec-value"><%= @car.year %></div>
              </div>
            </div>
            
            <div class="spec-item">
              <span class="spec-icon">üè∑Ô∏è</span>
              <div class="spec-info">
                <div class="spec-label"><%= t('cars.show.brand') %></div>
                <div class="spec-value"><%= @car.brand %></div>
              </div>
            </div>
            
            <div class="spec-item">
              <span class="spec-icon">‚ö°</span>
              <div class="spec-info">
                <div class="spec-label"><%= t('cars.show.status') %></div>
                <div class="spec-value">
                  <% if @car.available? %>
                    <span style="color: #22c55e;"><%= t('cars.show.available') %></span>
                  <% else %>
                    <span style="color: #ef4444;"><%= t('cars.show.unavailable') %></span>
                  <% end %>
                </div>
              </div>
            </div>
            
            <div class="spec-item">
              <span class="spec-icon">üõ°Ô∏è</span>
              <div class="spec-info">
                <div class="spec-label"><%= t('cars.show.insurance') %></div>
                <div class="spec-value"><%= t('cars.show.insurance_full') %></div>
              </div>
            </div>
            
            <div class="spec-item">
              <span class="spec-icon">üîß</span>
              <div class="spec-info">
                <div class="spec-label"><%= t('cars.show.maintenance') %></div>
                <div class="spec-value"><%= t('cars.show.maintenance_professional') %></div>
              </div>
            </div>
            
            <div class="spec-item">
              <span class="spec-icon">üßΩ</span>
              <div class="spec-info">
                <div class="spec-label"><%= t('cars.show.cleaning') %></div>
                <div class="spec-value"><%= t('cars.show.cleaning_detailed') %></div>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Description -->
        <div class="car-description-section">
          <h3 class="description-title"><%= t('cars.show.about') %></h3>
          <p class="car-description-full"><%= @car.description %></p>
        </div>
        
        <!-- Actions -->
        <div class="car-actions-section">
          <% if @car.available? %>
            <%= link_to new_car_booking_inquiry_path(@car), class: "book-now-btn" do %>
              <%= t('cars.show.send_inquiry') %> - ‚Ç¨<%= @car.price_per_day %>/<%= t('cars.show.per_day') %>
            <% end %>
          <% else %>
            <button class="book-now-btn" disabled style="opacity: 0.5; cursor: not-allowed;">
              <%= t('cars.show.currently_unavailable') %>
            </button>
          <% end %>
          
          <div class="secondary-actions">
            <a href="tel:+38970123456" class="action-btn">
              <span>üìû</span>
              <%= t('cars.show.call_us') %>
            </a>
            <a href="mailto:contact@autorentals.mk" class="action-btn">
              <span>‚úâÔ∏è</span>
              <%= t('cars.show.email') %>
            </a>
          </div>
        </div>
        
        <!-- Contact Information -->
        <div class="contact-section">
          <h4 class="contact-title"><%= t('cars.show.need_help') %></h4>
          <div class="contact-info">
            <div class="contact-item">
              <span class="contact-icon">üìû</span>
              <span>+389 (70) 123-456</span>
            </div>
            <div class="contact-item">
              <span class="contact-icon">‚úâÔ∏è</span>
              <span>contact@autorentals.mk</span>
            </div>
            <div class="contact-item">
              <span class="contact-icon">üïí</span>
              <span><%= t('cars.show.support_247') %></span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
