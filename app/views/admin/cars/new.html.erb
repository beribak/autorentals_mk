<% content_for :title, "Add New Car - EliteRentals Dashboard" %>

<div class="container">
  <div class="dashboard-header">
    <h1 class="dashboard-title">Add New Car</h1>
    <p class="dashboard-subtitle">Add a premium vehicle to your rental fleet</p>
  </div>

  <div class="form-container" data-controller="dashboard">
    <% if @car.errors.any? %>
      <div class="error-messages">
        <h4><%= pluralize(@car.errors.count, "error") %> prohibited this car from being saved:</h4>
        <ul>
          <% @car.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_with model: [:admin, @car], local: true do |form| %>
      <div class="form-row">
        <div class="form-group">
          <%= form.label :brand, class: "form-label" %>
          <%= form.text_field :brand, class: "form-input border", placeholder: "e.g., BMW, Mercedes, Audi" %>
        </div>
        
        <div class="form-group">
          <%= form.label :model, class: "form-label" %>
          <%= form.text_field :model, class: "form-input border", placeholder: "e.g., M5, S-Class, A8" %>
        </div>
      </div>

      <div class="form-row">
        <div class="form-group">
          <%= form.label :year, class: "form-label" %>
          <%= form.number_field :year, class: "form-input border", placeholder: "e.g., 2024", min: 1900, max: Date.current.year + 1 %>
        </div>
        
        <div class="form-group">
          <%= form.label :price_per_day, "Price per Day (â‚¬)", class: "form-label" %>
          <%= form.number_field :price_per_day, class: "form-input border", placeholder: "e.g., 299", step: 0.01, min: 0 %>
        </div>
      </div>

      <div class="form-row">
        <div class="form-group">
          <%= form.label :passengers, class: "form-label" %>
          <%= form.text_field :passengers, class: "form-input border", placeholder: "e.g., 5" %>
        </div>
        
        <div class="form-group">
          <%= form.label :transmission, class: "form-label" %>
          <%= form.select :transmission, 
                options_for_select([
                  ['', ''],
                  [t('cars.transmission_options.automatic'), 'automatic'],
                  [t('cars.transmission_options.manual'), 'manual'],
                  [t('cars.transmission_options.cvt'), 'cvt'],
                  [t('cars.transmission_options.semi_automatic'), 'semi_automatic']
                ]), 
                {}, 
                { class: "form-input border" } %>
        </div>
      </div>

      <div class="form-row">
        <div class="form-group">
          <%= form.label :gas, "Fuel Type", class: "form-label" %>
          <%= form.select :gas, 
                options_for_select([
                  ['', ''],
                  [t('cars.gas_options.petrol'), 'petrol'],
                  [t('cars.gas_options.diesel'), 'diesel'],
                  [t('cars.gas_options.hybrid'), 'hybrid'],
                  [t('cars.gas_options.electric'), 'electric'],
                  [t('cars.gas_options.lpg'), 'lpg']
                ]), 
                {}, 
                { class: "form-input border" } %>
        </div>
        
        <div class="form-group">
          <%= form.label :doors, class: "form-label" %>
          <%= form.text_field :doors, class: "form-input border", placeholder: "e.g., 4, 5" %>
        </div>
      </div>

      <div class="form-row">
        <div class="form-group">
          <%= form.label :trunk_size, "Trunk Size", class: "form-label" %>
          <%= form.text_field :trunk_size, class: "form-input border", placeholder: "e.g., Large, Medium, Small" %>
        </div>
        
        <div class="form-group">
          <!-- Empty div to maintain grid layout -->
        </div>
      </div>

      <div class="form-row single">
        <div class="form-group">
          <%= form.label :image_url, "Image URL", class: "form-label" %>
          <%= form.url_field :image_url, class: "form-input border", 
              placeholder: "https://example.com/car-image.jpg",
              data: { dashboard_target: "imageUrl", action: "input->dashboard#previewImage" } %>
          <img data-dashboard-target="imagePreview" 
               style="display: none; margin-top: 10px; max-width: 200px; border-radius: var(--radius-md);" 
               alt="Image preview">
        </div>
      </div>

      <div class="form-row single">
        <div class="form-group">
          <%= form.label :description, class: "form-label" %>
          <%= form.text_area :description, class: "form-input form-textarea border", 
              placeholder: "Describe the car's features, luxury amenities, and what makes it special..." %>
        </div>
      </div>

      <div class="form-row single">
        <div class="form-group">
          <div class="form-checkbox-group">
            <%= form.check_box :available, class: "form-checkbox" %>
            <%= form.label :available, "Available for rent", class: "form-label" %>
          </div>
        </div>
      </div>

      <div class="form-actions">
        <%= link_to "Cancel", admin_cars_path, class: "btn btn-secondary" %>
        <%= form.submit "Add Car", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
