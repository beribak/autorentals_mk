<% content_for :title, "Уреди #{@car.full_name} - EliteRentals Контролна табла" %>
<%= stylesheet_link_tag 'admin_cars_edit', 'data-turbo-track': 'reload' %>

<div class="container">
  <div class="dashboard-header">
    <div class="dashboard-header-content">
      <div class="dashboard-text">
        <h1 class="dashboard-title">Уреди автомобил</h1>
        <p class="dashboard-subtitle">Ажурирај ги деталите за <%= @car.full_name %></p>
      </div>
      <div class="dashboard-actions">
        <%= link_to "← Назад кон контролна табла", admin_cars_path, class: "btn btn-ghost" %>
        <button type="button" class="btn btn-secondary" onclick="openCalendarModal()">
          Календар
        </button>
        <%= link_to "Резервации", bookings_admin_car_path(@car), class: "btn btn-secondary" %>
      </div>
    </div>
  </div>

  <% if notice %>
    <div class="flash-notice success">
      <%= notice %>
    </div>
  <% end %>

  <!-- Main Layout: Car Form and Booking Form Side by Side -->
  <div class="admin-layout">
    <!-- Car Edit Form (Left Column) -->
    <div class="form-container car-form" data-controller="dashboard">
      <h2 class="form-title">Детали за автомобилот</h2>
      
      <% if @car.errors.any? %>
        <div class="error-messages">
          <h4><%= pluralize(@car.errors.count, "грешка") %> го спречи зачувувањето на автомобилот:</h4>
          <ul>
            <% @car.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_with model: [:admin, @car], local: true do |form| %>
        <div class="form-row">
          <div class="form-group">
            <%= form.label :brand, "Марка", class: "form-label" %>
            <%= form.text_field :brand, class: "form-input border", placeholder: "на пр., BMW, Mercedes, Audi" %>
          </div>
          
          <div class="form-group">
            <%= form.label :model, "Модел", class: "form-label" %>
            <%= form.text_field :model, class: "form-input border", placeholder: "на пр., M5, S-Class, A8" %>
          </div>
        </div>

        <div class="form-row">
          <div class="form-group">
            <%= form.label :year, "Година", class: "form-label" %>
            <%= form.number_field :year, class: "form-input border", placeholder: "на пр., 2024", min: 1900, max: Date.current.year + 1 %>
          </div>
          
          <div class="form-group">
            <%= form.label :price_per_day, "Цена по ден (€)", class: "form-label" %>
            <%= form.number_field :price_per_day, class: "form-input border", placeholder: "на пр., 299", step: 0.01, min: 0 %>
          </div>
        </div>

        <div class="form-row">
          <div class="form-group">
            <%= form.label :passengers, "Патници", class: "form-label" %>
            <%= form.text_field :passengers, class: "form-input border", placeholder: "на пр., 5" %>
          </div>
          
          <div class="form-group">
            <%= form.label :transmission, "Трансмисија", class: "form-label" %>
            <%= form.select :transmission, 
                  options_for_select([
                    ['', ''],
                    [t('cars.transmission_options.automatic'), 'automatic'],
                    [t('cars.transmission_options.manual'), 'manual'],
                    [t('cars.transmission_options.cvt'), 'cvt'],
                    [t('cars.transmission_options.semi_automatic'), 'semi_automatic']
                  ], @car.transmission), 
                  {}, 
                  { class: "form-input border" } %>
          </div>
        </div>

        <div class="form-row">
          <div class="form-group">
            <%= form.label :gas, "Тип гориво", class: "form-label" %>
            <%= form.select :gas, 
                  options_for_select([
                    ['', ''],
                    [t('cars.gas_options.petrol'), 'petrol'],
                    [t('cars.gas_options.diesel'), 'diesel'],
                    [t('cars.gas_options.hybrid'), 'hybrid'],
                    [t('cars.gas_options.electric'), 'electric'],
                    [t('cars.gas_options.lpg'), 'lpg']
                  ], @car.gas), 
                  {}, 
                  { class: "form-input border" } %>
          </div>
          
          <div class="form-group">
            <%= form.label :doors, "Врати", class: "form-label" %>
            <%= form.text_field :doors, class: "form-input border", placeholder: "на пр., 4, 5" %>
          </div>
        </div>

        <div class="form-row">
          <div class="form-group">
            <%= form.label :trunk_size, "Големина на багажник", class: "form-label" %>
            <%= form.text_field :trunk_size, class: "form-input border", placeholder: "на пр., Голем, Среден, Мал" %>
          </div>
          
          <div class="form-group">
            <!-- Empty div to maintain grid layout -->
          </div>
        </div>

        <div class="form-row single">
          <div class="form-group">
            <%= form.label :image_url, "URL на слика", class: "form-label" %>
            <%= form.url_field :image_url, class: "form-input border", 
                placeholder: "https://example.com/car-image.jpg",
                data: { dashboard_target: "imageUrl", action: "input->dashboard#previewImage" } %>
            <img data-dashboard-target="imagePreview" 
                 src="<%= @car.image_url if @car.image_url.present? %>"
                 style="<%= @car.image_url.present? ? 'display: block;' : 'display: none;' %> margin-top: 10px; max-width: 200px; border-radius: var(--radius-md);" 
                 alt="Преглед на слика">
          </div>
        </div>

        <div class="form-row single">
          <div class="form-group">
            <%= form.label :description, "Опис", class: "form-label" %>
            <%= form.text_area :description, class: "form-input form-textarea border", rows: 3,
                placeholder: "Опишете ги карактеристиките на автомобилот, луксузните садржини и што го прави посебен..." %>
          </div>
        </div>

        <div class="form-row single">
          <div class="form-group">
            <div class="form-checkbox-group">
              <%= form.check_box :available, class: "form-checkbox" %>
              <%= form.label :available, "Достапен за изнајмување", class: "form-label" %>
            </div>
          </div>
        </div>

        <div class="form-actions">
          <%= link_to "Откажи", admin_cars_path, class: "btn btn-secondary" %>
          <%= link_to "Погледни автомобил", car_path(@car), class: "btn btn-ghost", target: "_blank" %>
          <%= form.submit "Ажурирај автомобил", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>

    <!-- Booking Form (Right Column) -->
    <div class="form-container booking-form">
      <h2 class="form-title">Креирај резервација</h2>
      
      <% if @booking&.errors&.any? %>
        <div class="error-messages">
          <h4><%= pluralize(@booking.errors.count, "грешка") %> го спречи зачувувањето на резервацијата:</h4>
          <ul>
            <% @booking.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_with model: @booking, url: create_booking_admin_car_path(@car), local: true, 
          data: { controller: "booking", booking_price_per_day_value: @car.price_per_day } do |form| %>
        <!-- Customer Information -->
        <div class="form-section">
          <h3 class="form-section-title">Информации за клиентот</h3>
          
          <div class="form-row">
            <div class="form-group">
              <%= label_tag :booking_customer_first_name, "Име", class: "form-label" %>
              <%= text_field_tag :booking_customer_first_name, "", class: "form-input border", placeholder: "Име", required: true %>
            </div>
            
            <div class="form-group">
              <%= label_tag :booking_customer_last_name, "Презиме", class: "form-label" %>
              <%= text_field_tag :booking_customer_last_name, "", class: "form-input border", placeholder: "Презиме", required: true %>
            </div>
          </div>

          <div class="form-row">
            <div class="form-group">
              <%= label_tag :booking_customer_email, "Е-маил", class: "form-label" %>
              <%= email_field_tag :booking_customer_email, "", class: "form-input border", placeholder: "klient@example.com" %>
            </div>
            
            <div class="form-group">
              <%= label_tag :booking_customer_phone, "Телефон", class: "form-label" %>
              <%= telephone_field_tag :booking_customer_phone, "", class: "form-input border", placeholder: "+389 XX XXX XXX" %>
            </div>
          </div>
          <small class="form-help">Ако клиентот постои, неговите информации ќе бидат ажурирани</small>
        </div>

        <!-- Booking Details -->
        <div class="form-section">
          <h3 class="form-section-title">Детали за резервацијата</h3>
          
          <div class="form-row">
            <div class="form-group">
              <%= form.label :start_date, "Почетен датум", class: "form-label" %>
              <%= form.date_field :start_date, class: "form-input border", required: true, 
                  data: { action: "change->booking#calculateAdminPrice" } %>
            </div>
            
            <div class="form-group">
              <%= form.label :end_date, "Краен датум", class: "form-label" %>
              <%= form.date_field :end_date, class: "form-input border", required: true,
                  data: { action: "change->booking#calculateAdminPrice" } %>
            </div>
          </div>

          <div class="form-row single">
            <div class="form-group">
              <%= form.label :pickup_location, "Локација за преземање", class: "form-label" %>
              <%= form.text_field :pickup_location, class: "form-input border", placeholder: "Адреса или локација за преземање" %>
            </div>
          </div>

          <div class="form-row single">
            <div class="form-group">
              <%= form.label :special_requests, "Забелешки (Опционално)", class: "form-label" %>
              <%= form.text_area :special_requests, class: "form-input form-textarea border", rows: 2, placeholder: "Било какви посебни барања или забелешки..." %>
            </div>
          </div>

          <div class="form-row">
            <div class="form-group">
              <%= form.label :total_price, "Вкупна цена (€)", class: "form-label" %>
              <%= form.number_field :total_price, class: "form-input border", step: 0.01, min: 0, 
                  placeholder: "Автоматски ќе се пресмета", readonly: true,
                  data: { booking_target: "totalPrice" } %>
              <small class="form-help">Автоматски се пресметува врз основа на датумите</small>
            </div>
            
            <div class="form-group">
              <%= form.label :actual_price, "Реална цена (€)", class: "form-label" %>
              <%= form.number_field :actual_price, class: "form-input border", step: 0.01, min: 0, 
                  placeholder: "Внеси реална цена",
                  data: { booking_target: "actualPrice" } %>
              <small class="form-help">Реалната цена што ќе се наплати на клиентот</small>
            </div>
          </div>

          <div class="booking-summary">
            <h4>Резиме</h4>
            <p><strong>Автомобил:</strong> <%= @car.full_name %></p>
            <p><strong>Цена по ден:</strong> €<%= @car.price_per_day %></p>
            <p><strong>Статус:</strong> <span class="status-badge status-confirmed">Потврдено</span></p>
          </div>
        </div>

        <div class="form-actions">
          <%= form.submit "Креирај резервација", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>



  <!-- Calendar Modal -->
  <div id="calendarModal" class="calendar-modal" style="display: none;">
    <div class="calendar-modal-overlay" onclick="closeCalendarModal()"></div>
    <div class="calendar-modal-content">
      <div class="calendar-modal-header">
        <h3>Календар за достапност - <%= @car.full_name %></h3>
        <button type="button" class="calendar-close-btn" onclick="closeCalendarModal()">&times;</button>
      </div>
      <div class="calendar-modal-body">
        <div class="calendar-section" 
             data-controller="calendar" 
             data-calendar-booked-dates-value="<%= 
               booked_dates = Set.new
               @existing_bookings.where(status: [:pending, :confirmed, :in_progress, :completed]).each do |booking|
                 (booking.start_date..booking.end_date).each do |date|
                   booked_dates.add(date.strftime('%Y-%m-%d'))
                 end
               end
               booked_dates.to_a.to_json 
             %>"
             data-calendar-month-names-value='["Јануари", "Февруари", "Март", "Април", "Мај", "Јуни", "Јули", "Август", "Септември", "Октомври", "Ноември", "Декември"]'
             data-calendar-weekday-names-value='["Нед", "Пон", "Вто", "Сре", "Чет", "Пет", "Саб"]'>
          
          <div class="calendar-navigation">
            <button type="button" class="calendar-nav-button" data-action="click->calendar#changeMonth" data-direction="-1">‹</button>
            <div class="calendar-month-range" data-calendar-target="monthRange"></div>
            <button type="button" class="calendar-nav-button" data-action="click->calendar#changeMonth" data-direction="1">›</button>
          </div>
          
          <div class="calendars-container" data-calendar-target="calendarsContainer">
            <!-- Calendars will be populated by Stimulus controller -->
          </div>
          
          <div class="calendar-legend">
            <div class="legend-item">
              <span class="legend-box available"></span>
              <span>Достапно</span>
            </div>
            <div class="legend-item">
              <span class="legend-box booked"></span>
              <span>Резервирано</span>
            </div>
            <div class="legend-item">
              <span class="legend-box past-booked"></span>
              <span>Минати резервации</span>
            </div>
            <div class="legend-item">
              <span class="legend-box today"></span>
              <span>Денес</span>
            </div>
          </div>
        </div>
      </div>
      <div class="calendar-modal-footer">
        <button type="button" class="btn btn-secondary" onclick="closeCalendarModal()">Затвори</button>
      </div>
    </div>
  </div>

  <style>
    .dashboard-header-content {
      display: flex;
      justify-content: space-between;
      align-items: center;
      gap: 2rem;
    }

    .dashboard-text {
      flex: 1;
    }

    .dashboard-actions {
      display: flex;
      gap: 1rem;
      align-items: center;
    }

    .calendar-modal {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: 1000;
    }

    .calendar-modal-overlay {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.5);
    }

    .calendar-modal-content {
      position: relative;
      margin: 2rem auto;
      width: 90%;
      max-width: 1200px;
      background: white;
      border-radius: 12px;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
      max-height: 90vh;
      overflow-y: auto;
    }

    .calendar-modal-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 1.5rem;
      border-bottom: 1px solid #e0e0e0;
    }

    .calendar-modal-header h3 {
      margin: 0;
      font-size: 1.5rem;
      color: var(--color-text-primary);
    }

    .calendar-close-btn {
      background: none;
      border: none;
      font-size: 2rem;
      cursor: pointer;
      color: var(--color-text-secondary);
      padding: 0;
      width: 30px;
      height: 30px;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .calendar-close-btn:hover {
      color: var(--color-text-primary);
    }

    .calendar-modal-body {
      padding: 1.5rem;
    }

    .calendar-modal-footer {
      padding: 1rem 1.5rem;
      border-top: 1px solid #e0e0e0;
      text-align: right;
    }
  </style>

  <script>
    function openCalendarModal() {
      document.getElementById('calendarModal').style.display = 'block';
      document.body.style.overflow = 'hidden';
    }

    function closeCalendarModal() {
      document.getElementById('calendarModal').style.display = 'none';
      document.body.style.overflow = 'auto';
    }

    // Close modal on Escape key
    document.addEventListener('keydown', function(event) {
      if (event.key === 'Escape') {
        closeCalendarModal();
      }
    });
  </script>


</div>
