<!-- Featured Cars Section -->
<% if @featured_cars.any? %>
<section class="featured-cars-section">
  <div class="container">
    <div class="section-title">
      <h2>Featured Vehicles</h2>
      <p>Discover our most popular and stunning vehicles available for rent.</p>
    </div>
    
    <div class="cars-preview-grid">
      <% @featured_cars.each do |car| %>
        <div class="car-preview-card">
          <div class="car-image-container">
            <img src="<%= car.image_url %>" alt="<%= car.full_name %>" class="car-image">
            <div class="car-badge">Featured</div>
          </div>
          
          <div class="car-info">
            <h3 class="car-title"><%= car.full_name %></h3>
            <p class="car-description"><%= truncate(car.description, length: 100) %></p>
            
            <div class="car-footer">
              <div class="car-price"><%= car.formatted_price %></div>
              <%= link_to "View Details", car_path(car), class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    
    <div class="view-all-cta">
      <%= link_to "View All Cars", cars_path, class: "btn btn-secondary" %>
    </div>
  </div>
</section>
<% end %>

<!-- Call to Action Section -->
<section class="cta-section">
