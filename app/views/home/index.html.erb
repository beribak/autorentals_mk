<% content_for :title, t('app.meta.title') %>

<!-- Hero Section -->
<section class="hero-section">
  <div class="container">
    <div class="hero-content">
  <h3 class="hero-title"><%= t('app.brand') %> - Rent a Car Skopje</h3>
  <p class="hero-subtitle"><%= t('pages.home.hero_description', default: 'AutoRentalsMK  - Rent a car Skopje нуди професионална и сигурна услуга...') %></p>
      <div class="hero-cta">
  <%= link_to t('home.browse_cars', default: 'Прелистај возила'), cars_path, class: "btn btn-primary" %>
  <a href="#features" class="btn btn-secondary"><%= t('home.learn_more', default: 'Дознај повеќе') %></a>
      </div>
    </div>
  </div>
</section>

<!-- Features Section -->
<section class="features-section" id="features">
  <div class="container">
    <div class="section-title">
  <h2><%= t('home.why_choose', default: 'Зошто да изберете AutoRentalsMK?') %></h2>
  <p><%= t('home.why_choose_desc', default: 'Обезбедуваме непревзојдено искуство за изнајмување возила со премиум возила и исклучителна услуга.') %></p>
    </div>
    
    <div class="features-grid">
      <div class="feature-card">
        <div class="feature-icon">🚗</div>
  <h3><%= t('home.features.premium_fleet.title', default: 'Премиум флота') %></h3>
  <p><%= t('home.features.premium_fleet.desc', default: 'Изберете од нашата внимателно составена колекција на луксузни и високо-перформантни возила од врвни марки.') %></p>
      </div>
      
      <div class="feature-card">
        <div class="feature-icon">⚡</div>
  <h3><%= t('home.features.instant_booking.title', default: 'Инстантна резервација') %></h3>
  <p><%= t('home.features.instant_booking.desc', default: 'Резервирајте го вашето совршено возило за секунди со нашиот поедноставен процес. Без гужва, без чекање.') %></p>
      </div>
      
      <div class="feature-card">
        <div class="feature-icon">🛡️</div>
  <h3><%= t('home.features.full_insurance.title', default: 'Полно осигурување') %></h3>
  <p><%= t('home.features.full_insurance.desc', default: 'Возете со спокоен ум знаејќи дека сите наши возила доаѓаат со сеопфатно осигурително покритие.') %></p>
      </div>
      
      <div class="feature-card">
        <div class="feature-icon">💎</div>
  <h3><%= t('home.features.premium_service.title', default: 'Премиум услуга') %></h3>
  <p><%= t('home.features.premium_service.desc', default: 'Доживејте бела ракавичка услуга од подигање до враќање. Ние се грижиме за секој детал за вас.') %></p>
      </div>
      
      <div class="feature-card">
        <div class="feature-icon">📱</div>
  <h3><%= t('home.features.support.title', default: '24/7 поддршка') %></h3>
  <p><%= t('home.features.support.desc', default: 'Нашиот посветен тим за поддршка е достапен околу часот за да ви помогне кога и да ви треба помош.') %></p>
      </div>
      
      <div class="feature-card">
        <div class="feature-icon">🌟</div>
  <h3><%= t('home.features.best_prices.title', default: 'Најдобри цени') %></h3>
  <p><%= t('home.features.best_prices.desc', default: 'Конкурентни стапки без компромис во квалитетот. Луксузот не мора да ви го урне буџетот.') %></p>
      </div>
    </div>
  </div>
</section>

<!-- Featured Cars Section -->
<% if @featured_cars.any? %>
<section class="featured-cars-section">
  <div class="container">
    <div class="section-title">
  <h2><%= t('home.featured_cars.title', default: 'Истакнати возила') %></h2>
  <p><%= t('home.featured_cars.desc', default: 'Откријте ги нашите најпопуларни и зафатливи возила достапни за изнајмување.') %></p>
    </div>
    
    <div class="cars-preview-grid">
      <% @featured_cars.each do |car| %>
        <div class="car-preview-card">
          <div class="car-image-container">
            <img src="<%= car.image_url %>" alt="Rent a car Skopje - <%= car.full_name %>" class="car-image">
            <div class="car-badge"><%= t('home.featured_cars.badge', default: 'Истакнато') %></div>
          </div>
          
          <div class="car-info">
            <h3 class="car-title"><%= car.full_name %></h3>
            <p class="car-description"><%= truncate(car.description, length: 100) %></p>
            
            <div class="car-footer">
              <div class="car-price"><%= car.formatted_price %></div>
              <%= link_to t('home.featured_cars.view_details', default: 'Погледни детали'), car_path(car), class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    
    <div class="view-all-cta">
  <%= link_to t('home.featured_cars.view_all', default: 'Погледни ги сите возила'), cars_path, class: "btn btn-secondary" %>
    </div>
  </div>
</section>
<% end %>

<!-- Call to Action Section -->
<section class="cta-section">
  <div class="container">
    <div class="cta-content">
  <h2><%= t('home.cta.heading', default: 'Спремни сте да го поминете патот?') %></h2>
  <p><%= t('pages.home.browse_tagline') %></p>
  <%= link_to t('home.cta.start_browsing', default: 'Започни прелистување'), cars_path, class: "btn btn-primary" %>
    </div>
  </div>
</section>
