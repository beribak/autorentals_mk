<% content_for :title, t('app.nav.partners') %>

<style>
  .partner-logo img {
    width: 50vh;
    display: block;
    margin: 0 auto;
  }
</style>

<section class="partners-section">
  <div class="container">
    <div class="section-title">
      <h2><%= t('pages.partners.title', default: 'Our Partners') %></h2>
      <p><%= t('pages.partners.description', default: 'Meet the companies collaborating with us to bring you the best services and experiences.') %></p>
    </div>

    <div class="partners-grid">
      <% @partners.each do |partner| %>
        <div class="partner-card">
          <div class="partner-logo">
            <img src="<%= partner[:logo] %>" alt="<%= t('pages.partners.logo_alt', name: partner[:name], default: "#{partner[:name]} Logo") %>">
          </div>
          <div class="partner-info">
            <h3 class="partner-name"><%= partner[:name] %></h3>
            <p class="partner-description"><%= partner[:description] %></p>
            <a href="<%= partner[:url] %>" target="_blank" class="partner-website-link"><%= partner[:url] %></a>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
