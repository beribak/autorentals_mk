<% content_for :subject, t('booking_inquiry_mailer.new_inquiry.subject', car: (@car&.full_name || t('booking_inquiry_mailer.new_inquiry.general_request'))) %>

<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <style>
    body { font-family: Arial, sans-serif; line-height: 1.6; color: #333; }
    .container { max-width: 600px; margin: 0 auto; padding: 20px; }
    .header { background: #2563eb; color: white; padding: 20px; text-align: center; }
    .content { padding: 20px; background: #f9fafb; }
    .section { margin-bottom: 20px; }
    .label { font-weight: bold; color: #4b5563; }
    .value { margin-left: 10px; }
    .car-info { background: white; padding: 15px; border-radius: 8px; margin: 15px 0; }
  </style>
</head>
<body>
  <% raisee %>
  <div class="container">
    <div class="header">
  <h1><%= t('booking_inquiry_mailer.new_inquiry.heading') %></h1>
      <p>AutoRentalsMK</p>
    </div>
    
    <div class="content">
      <% if @car %>
        <div class="car-info">
          <h3>Бараното возило:</h3>
          <p><strong><%= @car.full_name %></strong></p>
          <p>Цена: €<%= @car.price_per_day %>/ден</p>
        </div>
      <% end %>

      <div class="section">
        <h3>Информации за клиентот:</h3>
        <p><span class="label">Име:</span><span class="value"><%= @inquiry[:first_name] %> <%= @inquiry[:last_name] %></span></p>
  <p><span class="label"><%= t('booking_inquiries.new.email') %>:</span><span class="value"><%= @inquiry[:email] %></span></p>
  <p><span class="label"><%= t('booking_inquiries.new.phone') %>:</span><span class="value"><%= @inquiry[:phone] %></span></p>
      </div>

      <div class="section">
        <h3>Детали за резервацијата:</h3>
        <p><span class="label"><%= t('cars.index.pickup_date') %>:</span><span class="value"><%= Date.parse(@inquiry[:start_date]).strftime("%d.%m.%Y") if @inquiry[:start_date] %></span></p>
        <p><span class="label"><%= t('cars.index.dropoff_date') %>:</span><span class="value"><%= Date.parse(@inquiry[:end_date]).strftime("%d.%m.%Y") if @inquiry[:end_date] %></span></p>
        <% if @inquiry[:pickup_location].present? %>
          <p><span class="label"><%= t('booking_inquiries.new.pickup_location') %>:</span><span class="value"><%= @inquiry[:pickup_location] %></span></p>
        <% end %>
      </div>

      <% if @inquiry[:message].present? %>
        <div class="section">
          <h3>Дополнителна порака:</h3>
          <p><%= simple_format(@inquiry[:message]) %></p>
        </div>
      <% end %>

      <div class="section">
        <p><strong>Ве молиме контактирајте го клиентот во најкраток можен рок!</strong></p>
      </div>
    </div>
  </div>
</body>
</html>
